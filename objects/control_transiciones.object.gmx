    <event eventtype="3" enumb="0">
      <action>
        <libid>1</libid>
        <id>603</id>
        <kind>7</kind>
        <userelative>0</userelative>
        <isquestion>0</isquestion>
        <useapplyto>-1</useapplyto>
        <exetype>2</exetype>
        <functionname></functionname>
        <codestring></codestring>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Se ejecuta la transición.
{
 
    if( activado == true ){
    
        switch(tipo){
        
            // Fade out / fade in
            case 0:{
            
            
                
                if( rapidez &gt; 0 ){ // Fade out
            
                    if( alpha &lt; 1 ){  alpha += rapidez; }
                    else{ 
                    
                        // Se va al room requerido y se cambia el signo para rapidez para ir sacando el cuadro negro que tapa la pantalla.
                        room_goto( nombre_room );
                        rapidez = -rapidez; 
                        
                    }            
            
                }
                else{ // Fade in
                
                    if( alpha &gt; 0 ){ alpha += rapidez; }
                    else{   
                    
                            // Se desactiva esta transición, terminando de sacar el cuadro negro que tapa la pantalla.
                            alpha = 0; 
                            activado = false; 
                    }
                
                }
                
                break;
         
            }
            
            
        
        }
    
    }
    

}
</string>
          </argument>
        </arguments>
      </action>
