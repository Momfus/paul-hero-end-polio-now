          <argument>
            <kind>1</kind>
            <string>/// Activación de la transición.
{

    switch(tipo){
    
        //Fade out / fade in
        case 0:{
        
            alpha = 0;
            
            switch( velocidad ){
            
                case 0:{ rapidez = 0.02; break; } // Lento
                case 1:{ rapidez = 0.05; break; }  // Medio
                case 2:{ rapidez = 0.2; break; }   // Rápido
                // Caso de mandar una velocidad erroneo
                default:{ show_message("La velocidad"+ string(velocidad) + "es erroneo"); break; }
            
            }
        
            break;
        
        }
        
        // Si se ingresa un tipo transición incorrecto.
        default:{ show_message("El tipo " + string(tipo) + " no existe"); break; }
    
    }

    activado = true; // Se señala que se esta dando uso a una transición.

}
</string>
